const Storj = require('storj-lib');
const storj = new Storj();
const keypair = Storj.KeyPair();

// Set up the bridge client
const bridgeOptions = {
  api: 'https://api.storj.io',
  basicAuth: {
    email: '<your-email>',
    password: '<your-password>'
  }
};
const bridgeClient = storj.BridgeClient(bridgeOptions);

// Authenticate with the bridge
bridgeClient.authenticate((err, client) => {
  if (err) {
    console.log(err);
    return;
  }

  // Generate a new keypair
  const keypair = Storj.KeyPair();

  // Print the new keypair information
  console.log(`New keypair generated:\nPublic Key: ${keypair.getPublicKey()}\nSecret Key: ${keypair.getSecretKey()}`);
});
